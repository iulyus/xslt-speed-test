#######################################################################################################################

sub labels {
    my $r = <<XML;
    <labels>
XML
    for (my $i = 1; $i <= $N_LABELS; $i++) {
        $r .= <<XML;
        <label id="$i">label $i</label>
XML
    }
    $r .= <<XML;
    </labels>
XML

    return $r;
}

#######################################################################################################################


#!/usr/bin/perl

use strict;
use warnings;

use File::Path;

# xml'и складываем в папку xml.

mkpath('xml');

my $N_LABELS = 7;

#######################################################################################################################

write_test("s3", 3, \&test_simple);
write_test("s1000", 1000, \&test_simple);
write_test("s5000", 5000, \&test_simple);
write_test("s10000", 10000, \&test_simple);
write_test("s25000", 25000, \&test_simple);

write_test("l3", 3, \&test_complex);
write_test("l1000", 1000, \&test_complex);
write_test("l5000", 5000, \&test_complex);
write_test("l10000", 10000, \&test_complex);
write_test("l25000", 25000, \&test_complex);

#######################################################################################################################

sub write_test {
    my ($prefix, $count, $content) = @_;

    my $xml = &$content($count);

    write_file("${prefix}.xml", $xml);
    write_file("${prefix}_.xml", mod_noindents($xml));

    my $xmlns = mod_ns($xml);
    write_file("${prefix}ns.xml", $xmlns);
    write_file("${prefix}ns_.xml", mod_noindents($xmlns));
}

sub write_file {
    my ($filename, $content) = @_;

    my $F;
    open($F, ">xml/$filename");
    print $F <<XML;
<?xml version="1.0" encoding="utf-8"?>

<test xmlns:ya="http://www.yandex.ru">
XML
    print $F $content;
    print $F <<XML;
</test>

XML
    close($F);
}

#######################################################################################################################

sub test_simple {
    my ($count) = @_;

    return items($count, \&item_simple);
}

sub test_complex {
    my ($count) = @_;

    return html() . labels() . items($count, \&item_complex);
}

#######################################################################################################################

sub items {
    my ($count, $item) = @_;

    my $r = <<XML;
    <items>
XML
    $r .= join('', map { &$item($_) } 1..$count);
    $r .= <<XML;
    </items>
XML
}

#######################################################################################################################

sub item_simple {
    my ($i) = @_;

    return <<XML;
        <item id="$i">
            <id>$i</id>
            <text>$i</text>
        </item>
XML

}

sub item_complex {
    my ($i) = @_;

    my $label_id = $i % $N_LABELS;

    return <<XML;
        <item id="$i">
            <id>$i</id>
            <text>text $i</text>
            <label id="$label_id"/>
            <subitem-1>
                <subitem-2>
                    <subitem-3>
                        <subitem-4>
                            <subitem-5>
                                <subitem-6>
                                    <subitem-7 id="$i">
                                        <id>$i</id>
                                        <text>subtext $i</text>
                                    </subitem-7>
                                </subitem-6>
                            </subitem-5>
                        </subitem-4>
                    </subitem-3>
                </subitem-2>
            </subitem-1>
        </item>
XML
}

#######################################################################################################################

sub mod_ns {
    my ($xml) = @_;

    if ($xml =~ m{<html>.*</html>}) {
        $xml =~ s{(.*)<html>}{ ns($1) . '<html>'; }egsm;
        $xml =~ s{</html>(.*?)<html>}{ '</html>' . ns($1) . '<html>'; }egsm;
        $xml =~ s{</html>(.*)}{ '</html>' . ns($1); }egsm;
    } else {
        $xml = ns($xml);
    }

    return $xml;
}

sub ns {
    my ($xml) = @_;

    $xml =~ s{<(\w+)}{<ya:$1}gsm;
    $xml =~ s{</(\w+)}{</ya:$1}gsm;

    return $xml;
}

sub mod_noindents {
    my ($xml) = @_;

    $xml =~ s{>\s+<}{><}gsm;
    $xml =~ s{(\?>)}{$1\n\n}sm;

    return $xml;
}

#######################################################################################################################

